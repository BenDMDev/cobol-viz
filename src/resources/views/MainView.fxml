<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.ui.controllers.MainController">
   <top>
      <MenuBar fx:id="fileMenu" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="newProject" mnemonicParsing="false" onAction="#createProject" text="New Project" />
              <MenuItem disable="true" mnemonicParsing="false" text="Close Project" />
                  <MenuItem fx:id="openFile" mnemonicParsing="false" onAction="#openFile" text="Open Project" />
                  <MenuItem mnemonicParsing="false" text="Import" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="View">
            <items>
              <MenuItem mnemonicParsing="false" text="Show Console" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <SplitPane dividerPositions="0.6" orientation="VERTICAL" prefHeight="338.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <items>
            <SplitPane dividerPositions="0.3" prefHeight="160.0" prefWidth="200.0">
              <items>
                  <TabPane prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                      <Tab text="Navigation">
                           <content>
                              <TreeView fx:id="projectNavigator" />
                           </content>
                        </Tab>
                    </tabs>
                  </TabPane>
                  <TabPane fx:id="previewTabs" />
              </items>
            </SplitPane>
            <TabPane prefHeight="200.0" prefWidth="200.0">
              <tabs>
                <Tab text="Console">
                     <content>
                        <TextArea fx:id="console" editable="false" prefHeight="154.0" prefWidth="598.0" />
                     </content>
                </Tab>
              </tabs>
            </TabPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>
